{% extends '::base.html.twig' %}

{% block content %}
<h1>Products</h1>
<table class="table table-striped">
<thead>
    <tr>
        <th>#</th>
        <th>Reference</th>
        <th>Name</th>
        <th>Owner</th>
        <th>Action</th>
    </tr>
</thead>
{% for product in products %}
    <tr>
        <td>{{ product.id }}</td>
        <td><a href="#">{{ product.reference }}</a></td>
        <td>{{ product.name|capitalize }}</td>
        <td>{{ product.owner.username }}</td>
        <td>
            <a href="{{ path('admin_products_edit', {id: product.id}) }}" class="btn btn-sm btn-warning"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit</a>
            <a href="#" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> <span class="caret"></span></a>
        </td>
    </tr>
{% endfor %}
</table>
{% endblock %}
